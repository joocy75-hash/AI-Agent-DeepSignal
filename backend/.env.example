# 데이터베이스 설정
DATABASE_URL=sqlite+aiosqlite:///./trading.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/trading  # PostgreSQL 사용 시

# API 키 암호화 키 (32바이트 base64 인코딩)
# 생성 방법: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here-generate-new-one

# JWT 설정
# 생성 방법: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRES_SECONDS=86400

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Bitget API (선택사항 - 테스트용)
# 사용자는 프론트엔드에서 API 키를 등록합니다
# BITGET_API_KEY=your_api_key_here
# BITGET_SECRET_KEY=your_secret_key_here
# BITGET_PASSPHRASE=your_passphrase_here

